<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_screen"
    tools:context=".Login">

                    <!-- Text View for User Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVuserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="124dp"
        android:text="User Name: "
        android:textSize="15dp"
        android:textColor="#ff000000"
        android:background="#ffffffff" />

                    <!-- Edit Text for UserName -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TVuserName"
        android:id="@+id/ETuserName_login"
        android:layout_alignBottom="@id/TVuserName"
        android:layout_toRightOf="@id/TVuserName"
        android:layout_toEndOf="@id/TVuserName"
        android:paddingLeft="15dp"
        android:textColor="#c6838383"
        android:singleLine="true"
        android:editable="true"
        android:textSize="15dp"
        android:background="#ffffffff"
        android:hint="Ex. Johnny2122"
        android:width="150dp" />

                    <!-- Text View for Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:id="@+id/TVpassword"
        android:layout_below="@id/TVuserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_toLeftOf="@+id/ETpassword_login"
        android:layout_toStartOf="@+id/ETpassword_login" />

                    <!-- Edit Text for Password -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETpassword_login"
        android:layout_alignBottom="@id/TVpassword"
        android:layout_toEndOf="@id/TVuserName"
        android:paddingLeft="15dp"
        android:background="#ffffffff"
        android:layout_alignTop="@id/TVpassword"
        android:editable="true"
        android:password="true"
        android:layout_alignRight="@id/ETuserName_login"
        android:layout_alignEnd="@id/ETuserName_login"
        android:layout_toRightOf="@id/TVuserName" />

                    <!-- Image View for Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IVlogo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

                    <!-- Button for Logging In -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/BTNlogin_login"
        android:layout_marginTop="49dp"
        android:layout_below="@id/ETpassword_login"
        android:layout_centerHorizontal="true" />

                    <!-- Button for going to Registration Page -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/BTNregister_login"
        android:layout_marginTop="22dp"
        android:layout_below="@id/BTNlogin_login"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
