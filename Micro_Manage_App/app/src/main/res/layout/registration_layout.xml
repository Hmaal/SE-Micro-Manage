<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wood"
    tools:context="gsu.se14.micro_manage_app.Registration_Activity">

                    <!-- Text View for Email Address -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address:"
        android:id="@+id/TVemailAddress"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

                    <!-- Edit Text for Email Address -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ETemail_register"
        android:width="150dp"
        android:inputType="textEmailAddress"
        android:layout_toEndOf="@id/TVemailAddress"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/TVemailAddress" />

                    <!-- Text View for Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:id="@+id/TVpassword"
        android:layout_below="@id/TVemailAddress"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

                    <!-- Edit Text for Password -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETpassword_register"
        android:layout_alignTop="@id/TVpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

                    <!-- Text View for Password Confirmation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfirm Password:"
        android:id="@+id/TVpasswordConfirm"
        android:layout_below="@id/TVpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

                    <!-- Edit Text for Password Confirmation -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETpasswordConfirm_register"
        android:layout_alignTop="@id/TVpasswordConfirm"
        android:layout_toRightOf="@id/TVpasswordConfirm"
        android:layout_toEndOf="@id/TVpasswordConfirm"
        android:layout_alignRight="@id/ETpassword_register"
        android:layout_alignEnd="@id/ETpassword_register" />

                    <!-- Text View for First Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/TVfirstName"
        android:layout_marginTop="23dp"
        android:layout_below="@id/ETpasswordConfirm_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

                    <!-- Edit Text for First Name -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETfirstName_register"
        android:layout_alignTop="@id/TVfirstName"
        android:layout_alignLeft="@id/ETpassword_register"
        android:layout_alignStart="@id/ETpassword_register" />

                    <!-- Text View for Last Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:id="@+id/TVlastName"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_marginTop="23dp"
        android:layout_below="@id/ETfirstName_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

                    <!-- Edit Text for Last Name -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETlastName_register"
        android:layout_alignTop="@id/TVlastName"
        android:layout_alignRight="@id/ETpasswordConfirm_register"
        android:layout_alignEnd="@id/ETpasswordConfirm_register"
        android:layout_toRightOf="@id/TVlastName"
        android:layout_alignLeft="@id/ETfirstName_register"
        android:layout_alignStart="@id/ETfirstName_register" />

                    <!-- Button for Registering User/Company -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/BTNregister_register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

                    <!-- Button for going Back to Login Page -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/BTNback_register"
        android:layout_above="@id/BTNregister_register"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
