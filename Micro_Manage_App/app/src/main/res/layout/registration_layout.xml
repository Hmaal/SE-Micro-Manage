<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wood"
    tools:context="gsu.se14.micro_manage_app.Registration_Activity">

                    <!-- Linear Layout for Email Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLemailAddress">

        <!-- Text View for Email Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="Email Address:"
            android:id="@+id/TVemailAddress"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <!-- Edit Text for Email Address -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:id="@+id/ETemail_register"
            android:inputType="textEmailAddress" />
    </LinearLayout>

                    <!-- Linear Layout for Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/LLemailAddress"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLpassword">

        <!-- Text View for Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="Password: "
            android:id="@+id/TVpassword"
            android:textSize="18sp"
            android:textColor="#ffffffff" />

        <!-- Edit Text for Password -->
        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ETpassword_register" />
    </LinearLayout>

                    <!-- Linear Layout for Password Confirm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/LLpassword"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLpasswordConfirm">

        <!-- Text View for Password Confirmation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="Comfirm Password:"
            android:id="@+id/TVpasswordConfirm"
            android:textSize="18sp"
            android:textColor="#ffffffff" />

        <!-- Edit Text for Password Confirmation -->
        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:inputType="textPassword"
            android:id="@+id/ETpasswordConfirm_register" />

    </LinearLayout>

                    <!-- Linear Layout for First Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/LLpasswordConfirm"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLfirstname" >

        <!-- Text View for First Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="First Name:"
            android:id="@+id/TVfirstName"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <!-- Edit Text for First Name -->
        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:inputType="textPersonName"
            android:id="@+id/ETfirstName_register" />
        </LinearLayout>

                    <!-- Linear Layout for Last Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/LLfirstname"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLlastName">

        <!-- Text View for Last Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="Last Name:"
            android:id="@+id/TVlastName"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <!-- Edit Text for Last Name -->
        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:inputType="textPersonName"
            android:id="@+id/ETlastName_register" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/LLlastName"
        android:layout_marginBottom="10sp"
        android:id="@+id/LLcompany">

        <!-- Text View for Company -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="Company: "
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:id="@+id/TVcompany" />

        <!-- Edit Text for Company -->
        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".90"
            android:inputType="text"
            android:id="@+id/ETcompany_register"/>
        </LinearLayout>

                    <!-- Button for Registering User/Company -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/BTNregister_register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

                    <!-- Button for going Back to Login Page -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/BTNback_register"
        android:layout_above="@id/BTNregister_register"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
